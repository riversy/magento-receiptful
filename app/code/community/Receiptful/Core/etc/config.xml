<?xml version="1.0"?>
<config>
    <modules>
        <Receiptful_Core>
            <version>0.0.1</version>
        </Receiptful_Core>
    </modules>
    <global>
        <helpers>
            <receiptful>
                <class>Receiptful_Core_Helper</class>
            </receiptful>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <receiptful>
                                            <title>Store Receiptful Module Section</title>
                                        </receiptful>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <sales_order_invoice_pay>
                <observers>
                    <Receiptful_Core_Create_Receipt>
                        <type>singleton</type>
                        <class>Receiptful_Core_Model_Observer</class>
                        <method>createReceipt</method>
                    </Receiptful_Core_Create_Receipt>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </adminhtml>
</config>
