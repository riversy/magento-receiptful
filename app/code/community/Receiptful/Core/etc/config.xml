<?xml version="1.0"?>
<config>
    <modules>
        <Receiptful_Core>
            <version>1.0.1</version>
        </Receiptful_Core>
    </modules>
    <global>
        <models>
            <receiptful_cron>
                <class>Receiptful_Core_Cron</class>
            </receiptful_cron>
        </models>
        <helpers>
            <receiptful>
                <class>Receiptful_Core_Helper</class>
            </receiptful>
        </helpers>
        <resources>
            <receiptful_setup>
                <setup>
                    <module>Receiptful_Core</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </receiptful_setup>
        </resources>
        <blocks>
            <receiptful>
                <class>Receiptful_Core_Block</class>
            </receiptful>
        </blocks>
        <events>
            <sales_quote_collect_totals_before>
                <observers>
                    <Receiptful_Core_Validate_Coupon>
                        <type>singleton</type>
                        <class>Receiptful_Core_Observer_Receipt</class>
                        <method>validateCoupon</method>
                    </Receiptful_Core_Validate_Coupon>
                </observers>
            </sales_quote_collect_totals_before>
            <sales_order_invoice_pay>
                <observers>
                    <Receiptful_Core_Create_Receipt>
                        <type>singleton</type>
                        <class>Receiptful_Core_Observer_Receipt</class>
                        <method>createReceipt</method>
                    </Receiptful_Core_Create_Receipt>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <receiptful after="Mage_Adminhtml">Receiptful_Core_Adminhtml</receiptful>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <layout>
            <updates>
                <receiptful_core>
                    <file>receiptful.xml</file>
                </receiptful_core>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <receiptful>
                                            <title>Store Receiptful Module Section</title>
                                        </receiptful>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <Receiptful_Core_Custom_Resend_Button>
                        <type>singleton</type>
                        <class>Receiptful_Core_Observer_Receipt</class>
                        <method>addCustomResendButton</method>
                    </Receiptful_Core_Custom_Resend_Button>
                    <Receiptful_Core_View_Receipt>
                        <type>singleton</type>
                        <class>Receiptful_Core_Observer_Receipt</class>
                        <method>addViewReceiptButton</method>
                    </Receiptful_Core_View_Receipt>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
    <crontab>
        <jobs>
            <receiptful_receipt_resend_failure>
                <schedule>
                    <cron_expr>*/2 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>receiptful_cron/receipt::resendFailures</model>
                </run>
            </receiptful_receipt_resend_failure>
        </jobs>
    </crontab>
</config>
